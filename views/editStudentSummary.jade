doctype html
html
 head
  title Edit Student Summary
  link(rel='stylesheet', href='/stylesheets/style.css')  
 body
  h1 Edit Student Summary
  form(action='/editStudentSummary/#{id}' method='post')
   br
   br
   | Grade:
   input(type='text' value = '#{grade_name}' name='gradeName' required)
   input(type='submit' value='Change Grade')
   br
   br

  form(action='/students/#{id}' method='post')
   | Student Name:
   input(type='text' value = '#{name}' name='studentName' required)
   br
   each sub in subjects
    br
    | #{sub.name}:
    input(type="number" value='#{sub.score}' name='subId_#{sub.id}' max='#{sub.maxScore}' min='0' required)
    br
    br
   input(type='submit' value='Change Score')