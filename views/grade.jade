doctype html
html
 head
  title Grade Summary
  link(rel='stylesheet', href='/stylesheets/style.css')
  script(type='text/javascript', src='/javascripts/editor.js')
 body
  h1 Grade Summary
  p
   div
    div(class="name") Name: #{name}
     br
     form(action='/grades/#{id}' method="post")
      input(type='text' placeholder="Enter Grade Name" name='newname')
      input(type="submit" value="Edit grade")    
    div Students:
    ul
     each student in students
      li 
       a(href="/students/#{student.id}") #{student.name}
    div Subjects:
    ul
     each subject in subjects
       li 
        a(href="/subject/#{subject.id}") #{subject.name}
  button(type='button', onclick="location.href='/addNewStudent/#{id}'") Add New Student
  | 
  button(type='button', onclick="location.href='/addNewSubject/#{id}'") Add New Subject

      
