doctype html
html
 head
  title Subject Summary
  link(rel='stylesheet', href='/stylesheets/style.css')  
 body
  h1 Subject Summary 
  table(border=1)
   tr 
   th #{subject[0].subject_name}
   th #{subject[0].maxScore}
   th 
    a(href="/grades/#{subject[0].grade_id}") #{subject[0].grade_name}
  table(border=1 )
   th Student Name
   th Score
   each sb in subject
    tr 
     td
      a(href="/students/#{sb.student_id}") #{sb.student_name}
     td #{sb.score}
  br
  button(type="button" onclick="location.href='/editSubjectSummary/#{subject[0].subject_id}'") Edit Subject Summary
  br
  br
  button(type="button" onclick="location.href='/addNewScore/#{subject[0].subject_id}/#{subject[0].student_id}'") Add Score

